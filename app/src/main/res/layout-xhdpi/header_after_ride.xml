<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal"
    android:weightSum="5">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="horizontal">

        <com.flyby_riders.Utils.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowRadius="100dp"
            app:shadowShape="oval"
            app:shadowSide="bottom"
            app:sl_shadow_angle="270"
            app:sl_shadow_color="#51FFFFFF"
            app:sl_shadow_radius="2dp"
            app:sl_shadowed="true">

            <com.flyby_riders.Utils.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                app:shadowRadius="100dp"
                app:shadowShape="oval"
                app:shadowSide="top"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="#000000"
                app:sl_shadow_radius="8dp"
                app:sl_shadowed="true">

                <RelativeLayout
                    android:id="@+id/Back_Btn_ex"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_drak"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_back" />
                </RelativeLayout>
            </com.flyby_riders.Utils.ShadowLayout>
        </com.flyby_riders.Utils.ShadowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/Ride_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_edit_name"
                android:drawablePadding="5dp"
                android:fontFamily="@font/avenirbextregular"
                android:gravity="center|start"
                android:paddingEnd="5dp"
                android:singleLine="true"
                android:text="Ride1"
                android:textColor="#fff"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/avenirbextregular"
                    android:gravity="center|start"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Location Sharing"
                    android:textColor="#AEACB5"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/location_switch"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        app:theme="@style/Color1SwitchStyle"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:id="@+id/Location_status_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OFF"
                        android:gravity="center"
                        android:fontFamily="@font/avenirbextregular"
                        />

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/end_my_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center|end"
            android:background="@drawable/base_round_ripple"
            android:drawablePadding="5dp"
            android:fontFamily="@font/avenirnextheavy"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/end_ride"
            android:textColor="@color/background_base"
            android:textSize="18dp" />
    </LinearLayout>



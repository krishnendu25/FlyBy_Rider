<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#17131D"
                android:centerY="0.75"
                android:endColor="#17131D"
                android:startColor="#17131D" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#FF97FD86"
                    android:centerY="0.75"
                    android:endColor="#FF97FD86"
                    android:startColor="#FF97FD86" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:endColor="#FF97FD86"
                    android:startColor="#FF97FD86" />
            </shape>
        </clip>
    </item>

</layer-list>
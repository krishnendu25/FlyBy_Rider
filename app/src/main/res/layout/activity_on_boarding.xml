<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    tools:context=".Ui.Activity.OnBoarding">

    <RelativeLayout
        android:id="@+id/Background_Color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/Background_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_view"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manropeextrabold"
            android:textColor="@color/white"
            android:paddingStart="22dp"
            android:gravity="center|start"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/Subtitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingEnd="10dp"
            android:gravity="center|start|top"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/manropeextralight"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent">
        <TextView
            android:id="@+id/next_tv"
            android:layout_width="150dp"
            android:layout_height="?actionBarSize"
            android:background="@drawable/base_round_ripple"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="NEXT"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:textColor="@color/background_base"
            android:drawableEnd="@drawable/ic_next_frf"
            android:drawableTint="@color/background_base"
            android:fontFamily="@font/manropeextrabold"
            android:layout_marginEnd="20dp"
            android:textSize="20dp"
            />
    </RelativeLayout>





</RelativeLayout>
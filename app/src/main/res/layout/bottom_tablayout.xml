<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D917131D"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:weightSum="3"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"

        android:gravity="center">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/ShadowLayout_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neumorph_lightSource="leftBottom"
            android:visibility="gone"
            app:neumorph_strokeWidth="2dp"
            app:neumorph_strokeColor="#29252E"
            app:neumorph_shadowColorDark="#1FFFFFFF"
            app:neumorph_shadowColorLight="#000000"
            app:neumorph_shadowElevation="4dp"
            app:neumorph_shapeType="flat">
            <TextView
                android:id="@+id/discover_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_discoveractive"
                android:drawablePadding="2dp"
                android:background="@drawable/tab_selected"
                android:padding="8dp"
                android:visibility="visible"
                android:fontFamily="@font/manropemedium"
                android:gravity="center"
                android:text="@string/discover"
                android:textColor="@color/light_green"
                android:textSize="10sp" />



        </soup.neumorphism.NeumorphCardView>
        <TextView
            android:id="@+id/discover_inactive"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_discoverinactive"
            android:drawablePadding="2dp"
            android:fontFamily="@font/manropemedium"
            android:gravity="center"
            android:text="@string/discover"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/ShadowLayout_my_garage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neumorph_lightSource="leftBottom"
            android:visibility="gone"
            app:neumorph_strokeWidth="2dp"
            app:neumorph_strokeColor="#29252E"
            app:neumorph_shadowColorDark="#1FFFFFFF"
            app:neumorph_shadowColorLight="#000000"
            app:neumorph_shadowElevation="4dp"
            app:neumorph_shapeType="flat"
            >
            <TextView
                android:id="@+id/my_garage_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mygarageactive"
                android:drawablePadding="2dp"
                android:background="@drawable/tab_selected"
                android:padding="8dp"
                android:visibility="visible"
                android:fontFamily="@font/manropemedium"
                android:gravity="center"
                android:text="@string/my_garage"
                android:textColor="@color/light_green"
                android:textSize="10sp" />


        </soup.neumorphism.NeumorphCardView>
        <TextView
            android:id="@+id/my_garage_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mygarageinactive"
            android:drawablePadding="2dp"
            android:padding="10dp"
            android:visibility="gone"
            android:fontFamily="@font/manropemedium"
            android:gravity="center"
            android:text="@string/my_garage"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/ShadowLayout_rides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neumorph_lightSource="leftBottom"
            android:visibility="gone"
            app:neumorph_strokeWidth="2dp"
            app:neumorph_strokeColor="#29252E"
            app:neumorph_shadowColorDark="#1FFFFFFF"
            app:neumorph_shadowColorLight="#000000"
            app:neumorph_shadowElevation="4dp"
            app:neumorph_shapeType="flat"
            >
            <TextView
                android:id="@+id/rides_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_tripsactive"
                android:drawablePadding="2dp"
                android:background="@drawable/tab_selected"
                android:padding="8dp"
                android:visibility="visible"
                android:fontFamily="@font/manropemedium"
                android:gravity="center"
                android:text="@string/rides"
                android:textColor="@color/light_green"
                android:textSize="10sp" />
        </soup.neumorphism.NeumorphCardView>
        <TextView
            android:id="@+id/rides_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_tripsinactive"
            android:drawablePadding="2dp"
            android:fontFamily="@font/manropemedium"
            android:gravity="center"
            android:text="@string/rides"
            android:textColor="#fff"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_base"
    android:orientation="vertical">



        <com.flyby_riders.Utils.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            app:shadowRadius="100dp"
            app:shadowShape="rectangle"
            app:shadowSide="top"
            app:sl_shadow_angle="90"
            app:sl_shadow_color="#000000"
            app:sl_shadow_radius="16dp"
            app:sl_shadowed="true">

            <RelativeLayout
                android:id="@+id/Garage_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catagory_box">

                <TextView
                    android:id="@+id/Garage_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5 kms"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/round_brown"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/manropeextrabold"
                    android:drawableStart="@drawable/icon_distance"
                    android:layout_alignParentEnd="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/Garage_distance_unit"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/Garage_Call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_call"/>
                    <ImageView
                        android:id="@+id/Garage_Whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_wsp"/>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Garage_ImageView"
                    android:layout_width="60dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/Garage_NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Garage_ImageView"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/avenirnextbold"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Garage_CITY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Garage_NAME"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="5dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/manroperegular"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="#AEACB5"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/Garage_Services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Garage_CITY"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/manroperegular"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingEnd="20dp"
                    android:textColor="#AEACB5"
                    android:textSize="14dp" />

            </RelativeLayout>
        </com.flyby_riders.Utils.ShadowLayout>

</LinearLayout>
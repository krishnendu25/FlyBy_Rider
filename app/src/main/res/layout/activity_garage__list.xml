<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    android:orientation="vertical"
    tools:context=".Ui.Activity.AllGarageList">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <com.flyby_riders.Utils.ShadowLayout
            android:id="@+id/Back_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowRadius="100dp"
            app:shadowShape="oval"
            app:shadowSide="bottom"
            app:sl_shadow_angle="270"
            app:sl_shadow_color="#51FFFFFF"
            app:sl_shadow_radius="2dp"
            app:sl_shadowed="true">

            <com.flyby_riders.Utils.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                app:shadowRadius="100dp"
                app:shadowShape="oval"
                app:shadowSide="top"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="#000000"
                app:sl_shadow_radius="10dp"
                app:sl_shadowed="true">

                <RelativeLayout
                    android:id="@+id/Back_Btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_drak"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_back" />
                </RelativeLayout>
            </com.flyby_riders.Utils.ShadowLayout>
        </com.flyby_riders.Utils.ShadowLayout>
<TextView
    android:id="@+id/categoryTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:text="Gears &amp; Accessories"
    android:textSize="18dp"
    android:marqueeRepeatLimit="marquee_forever"
    android:ellipsize="marquee"
    android:gravity="center|start"
    android:fontFamily="@font/avenirnextbold"
    android:textColor="@color/white"
    android:layout_toRightOf="@+id/Back_"/>
    <com.flyby_riders.Utils.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shadowRadius="100dp"
        app:shadowShape="oval"
        app:shadowSide="bottom"
        android:layout_alignParentEnd="true"
        app:sl_shadow_angle="270"
        app:sl_shadow_color="#51FFFFFF"
        app:sl_shadow_radius="2dp"
        app:sl_shadowed="true">

        <com.flyby_riders.Utils.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            app:shadowRadius="100dp"
            app:shadowShape="oval"
            app:shadowSide="top"
            app:sl_shadow_angle="90"
            app:sl_shadow_color="#000000"
            app:sl_shadow_radius="10dp"
            app:sl_shadowed="true">

            <RelativeLayout
                android:id="@+id/Sort_Btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/round_drak"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_sort" />
            </RelativeLayout>
        </com.flyby_riders.Utils.ShadowLayout>
    </com.flyby_riders.Utils.ShadowLayout>

</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/garage_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    android:orientation="vertical"
    tools:context=".Ui.Activity.Document_Album_Creator">
    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Bike_Document_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Add a title for this document"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenirnextbold"/>
                <EditText
                    android:id="@+id/Album_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center|start|top"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/document_edittext"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/manropesemibold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/Error_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:fontFamily="@font/manroperegular"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/Update_File_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_green"
                    android:textSize="18dp"
                    android:drawableStart="@drawable/ic_add_doc"
                    android:text="Add New File"
                    android:layout_gravity="end"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/avenirnextbold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/My_Photo_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </ScrollView>




        <com.flyby_riders.Utils.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shadowRadius="100dp"
            app:shadowShape="rectangle"
            app:shadowSide="bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:sl_shadow_angle="270"
            app:sl_shadow_color="#33EDE9E9"
            app:sl_shadow_radius="8dp"
            app:sl_shadowed="true">

        <com.flyby_riders.Utils.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            app:shadowRadius="100dp"
            app:shadowShape="rectangle"
            app:shadowSide="top"
            app:sl_shadow_angle="90"
            app:sl_shadow_color="#000000"
            app:sl_shadow_radius="16dp"
            app:sl_shadowed="true">
            <Button
                android:id="@+id/save_my_album"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="24dp"
                android:text="@string/save_document"
                android:textColor="@color/background_base"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingEnd="24dp"
                android:fontFamily="@font/avenirnextheavy"
                android:background="@drawable/base_btn_ripple" />

        </com.flyby_riders.Utils.ShadowLayout>
        </com.flyby_riders.Utils.ShadowLayout>'

    </RelativeLayout>



</LinearLayout>
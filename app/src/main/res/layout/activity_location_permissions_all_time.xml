<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    tools:context=".Ui.Activity.LocationPermissionsAllTime">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"

        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_location_1"
            />

        <TextView
            android:id="@+id/Text_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18dp"
            android:gravity="center"
            android:fontFamily="@font/manropeextrabold"
            android:text="@string/grant_location_permission"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <TextView
            android:id="@+id/text_subtitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_16dp"
            android:gravity="center"
            android:text="ALL THE TIME"
            android:fontFamily="@font/manropeextrabold"
            android:textColor="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="@dimen/dimen_14sp"
            android:gravity="center|start|top"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_14sp"
                android:gravity="center"
                android:text="In your location Settings, change the locationn permission to “ALL THE TIME”"
                android:fontFamily="@font/manroperegular"
                android:textColor="#AEACB5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_14sp"
                android:gravity="center"
                android:text="Your location will be tracked from the time you START the ride till you END the ride."
                android:fontFamily="@font/manroperegular"
                android:textColor="#AEACB5"/>

        </LinearLayout>





    </LinearLayout>





    <TextView
        android:id="@+id/allow_access_TV"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/light_green"
        android:text="GIVE PERMISSION"
        android:gravity="center"
        android:textSize="17dp"
        android:onClick="getPermission"
        android:padding="10dp"
        android:textColor="@color/background_base"
        android:layout_alignParentBottom="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:fontFamily="@font/avenirnextbold"
     />



</RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    style="@style/discover_item"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        style="@style/discover_item_in">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_showroom"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#61B89E"
                            android:textSize="16dp"
                            android:fontFamily="@font/manropeextrabold"
                            android:text="Bike\nShowroom"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    style="@style/discover_item">
                    <RelativeLayout
                        style="@style/discover_item_in">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_racetrack"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#5AABCB"
                            android:textSize="16dp"
                            android:fontFamily="@font/manropeextrabold"
                            android:text="Race Track"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    style="@style/discover_item"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        style="@style/discover_item_in">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_raceacadmey"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#AD8D31"
                            android:textSize="16dp"
                            android:fontFamily="@font/manropeextrabold"
